# Stellar Keystone Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Soroban Network Configuration
# =============================================================================

# RPC URL for Soroban network (local or testnet)
# Local: http://127.0.0.1:8000
# Testnet: https://soroban-testnet.stellar.org
SOROBAN_RPC_URL=http://127.0.0.1:8000

# Network passphrase
# Local: Standalone Network ; February 2017
# Testnet: Test SDF Network ; September 2015
SOROBAN_NETWORK_PASSPHRASE="Standalone Network ; February 2017"

# Network name (local or testnet)
SOROBAN_NETWORK=local

# =============================================================================
# Signer Keys (DO NOT COMMIT ACTUAL KEYS)
# =============================================================================

# Private key for deploying contracts and signing transactions
# For local testing, you can generate with: soroban keys generate --global test
# The key name is read from this env var, not the actual secret key
SIGNER_KEY_NAME=test

# =============================================================================
# Deployed Contract Addresses (filled after deployment)
# =============================================================================

# RBAC Contract ID (set after running deploy)
RBAC_CONTRACT_ID=

# =============================================================================
# Indexer Configuration
# =============================================================================

# SQLite database path for indexer
INDEXER_DB_PATH=./indexer/indexer.db

# Polling interval in seconds
INDEXER_POLL_INTERVAL=5

# =============================================================================
# Frontend Configuration
# =============================================================================

# API base URL (for development, use local)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Path to indexer database (relative to frontend)
INDEXER_DB_RELATIVE_PATH=../indexer/indexer.db
